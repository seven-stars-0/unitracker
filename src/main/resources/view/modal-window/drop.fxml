<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="200.0" maxWidth="400.0" minHeight="200.0" minWidth="300.0" prefHeight="200.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.unitracker.controller.modal.DropController">
   <center>
      <VBox alignment="CENTER">
         <children>
            <Label fx:id="messageLabel" alignment="CENTER" text="Vuoi davvero cancellare" />
            <Label alignment="CENTER" text="Tutti i dati al suo interno verranno eliminati" />
         </children>
      </VBox>
   </center>
   <bottom>
      <HBox>
         <children>
            <Button alignment="CENTER" mnemonicParsing="false" onAction="#goBack" styleClass="apply-outline" text="Indietro" textAlignment="CENTER" />
            <Region HBox.hgrow="ALWAYS" />
            <Button mnemonicParsing="false" onAction="#backupAndDelete" styleClass="delete-outline" text="Backup &amp; Elimina" />
            <Region HBox.hgrow="ALWAYS" />
            <Button contentDisplay="CENTER" mnemonicParsing="false" onAction="#delete" styleClass="delete" text="Elimina" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
