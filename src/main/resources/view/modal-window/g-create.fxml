<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>


<BorderPane maxHeight="250.0" maxWidth="350.0" minHeight="250.0" minWidth="350.0" prefHeight="250.0" prefWidth="350.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.unitracker.controller.modal.GCreateController">
   <bottom>
      <VBox spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <Label fx:id="errorMessage" styleClass="error-label" text="Compilare i campi obbligatori" wrapText="true">
               <VBox.margin>
                  <Insets left="10.0" />
               </VBox.margin>
            </Label>
            <ButtonBar prefHeight="40.0" prefWidth="200.0">
               <buttons>
                  <Button mnemonicParsing="false" onAction="#goBack" styleClass="delete-outline" text="Indietro" />
                  <Button fx:id="createButton" disable="true" mnemonicParsing="false" onAction="#create" styleClass="apply" text="Crea" />
               </buttons>
            </ButtonBar>
         </children>
      </VBox>
   </bottom>
   <center>
      <GridPane BorderPane.alignment="CENTER">
        <columnConstraints>
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
          <ColumnConstraints halignment="CENTER" hgrow="SOMETIMES" maxWidth="150.0" minWidth="150.0" prefWidth="150.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="TOP" vgrow="SOMETIMES" />
        </rowConstraints>
         <children>
            <Label text="Codice gruppo" />
            <TextField fx:id="codeField" maxHeight="26.0" maxWidth="150.0" minHeight="26.0" minWidth="150.0" onKeyTyped="#checkSemanticError" prefHeight="26.0" prefWidth="150.0" GridPane.columnIndex="1" />
            <Label text="Supergruppo" GridPane.rowIndex="1" />
            <TextField fx:id="supergroupField" onKeyTyped="#checkSemanticError" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            <Label text="Nome" GridPane.rowIndex="2" />
            <TextField fx:id="nameField" onKeyTyped="#checkSemanticError" GridPane.columnIndex="1" GridPane.rowIndex="2" />
         </children>
         <BorderPane.margin>
            <Insets left="20.0" right="30.0" top="20.0" />
         </BorderPane.margin>
      </GridPane>
   </center>
</BorderPane>
