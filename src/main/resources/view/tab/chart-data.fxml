<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.unitracker.controller.tab.chart.ChartDataController">
   <center>
      <TableView fx:id="tableView" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="idColumn" prefWidth="75.0" text="ID" />
          <TableColumn fx:id="typeColumn" prefWidth="75.0" text="Tipo" />
            <TableColumn fx:id="quantityColumn" prefWidth="75.0" text="QuantitÃ " />
            <TableColumn fx:id="dateColumn" prefWidth="75.0" text="Data" />
            <TableColumn fx:id="descriptionColumn" prefWidth="75.0" text="Descrizione" />
        </columns>
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
      </TableView>
   </center>
   <bottom>
      <HBox fx:id="hbox" alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Region HBox.hgrow="ALWAYS" />
          <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#deleteSelectedTransaction" styleClass="delete-outline" text="Elimina">
               <HBox.margin>
                  <Insets bottom="5.0" right="10.0" top="5.0" />
               </HBox.margin>
            </Button>
            <Button fx:id="applyButton" disable="true" mnemonicParsing="false" onAction="#applySelectedTransaction" styleClass="apply-outline" text="Applica">
               <HBox.margin>
                  <Insets bottom="5.0" right="10.0" top="5.0" />
               </HBox.margin>
            </Button>
         </children>
      </HBox>
   </bottom>
</BorderPane>
