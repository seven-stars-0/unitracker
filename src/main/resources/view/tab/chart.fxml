<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.LineChart?>
<?import javafx.scene.chart.NumberAxis?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<SplitPane fx:id="splitPane" orientation="VERTICAL" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.unitracker.controller.tab.chart.ChartController">
  <items>
      <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308">
         <children>
            <LineChart fx:id="lineChart" VBox.vgrow="ALWAYS">
              <xAxis>
                <CategoryAxis label="Data" side="BOTTOM" />
              </xAxis>
              <yAxis>
                <NumberAxis side="LEFT" />
              </yAxis>
            </LineChart>
            <HBox alignment="CENTER" spacing="50.0" VBox.vgrow="ALWAYS">
               <children>
                  <RadioButton mnemonicParsing="false" text="Y">
                     <toggleGroup>
                        <ToggleGroup fx:id="radioGroup" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="M" toggleGroup="$radioGroup" />
                  <RadioButton contentDisplay="TOP" mnemonicParsing="false" text="W" toggleGroup="$radioGroup" />
                  <RadioButton mnemonicParsing="false" selected="true" text="D" textAlignment="CENTER" toggleGroup="$radioGroup" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" VBox.vgrow="NEVER">
               <children>
                  <CheckBox fx:id="checkBoxUnapplied" mnemonicParsing="false" onAction="#checkBox" text="Dati temporanei">
                     <padding>
                        <Insets left="10.0" />
                     </padding></CheckBox>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button mnemonicParsing="false" onAction="#addTransaction" text="Aggiungi">
                     <HBox.margin>
                        <Insets bottom="5.0" right="10.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
            <ButtonBar buttonMinWidth="50.0" VBox.vgrow="NEVER">
              <buttons>
                <Button mnemonicParsing="false" onAction="#toggleTableView" styleClass="icon-button">
                     <graphic>
                        <ImageView fitHeight="16.0" fitWidth="16.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../../icons/minus-small.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
              </buttons>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </ButtonBar>
         </children>
      </VBox>
  </items>
</SplitPane>
