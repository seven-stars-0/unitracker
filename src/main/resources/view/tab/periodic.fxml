<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="project.unitracker.controller.tab.PeriodicController">
   <bottom>
      <ButtonBar BorderPane.alignment="CENTER">
        <buttons>
          <Button fx:id="deleteButton" disable="true" mnemonicParsing="false" onAction="#deleteSelected" styleClass="delete-outline" text="Elimina" />
            <Button mnemonicParsing="false" onAction="#addPeriodicTransaction" styleClass="apply-outline" text="Aggiungi" />
        </buttons>
      </ButtonBar>
   </bottom>
   <center>
      <TableView fx:id="tableView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
         <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
         </columnResizePolicy>
         <columns>
            <TableColumn fx:id="chart" prefWidth="75.0" text="Grafico" />
            <TableColumn fx:id="quantity" prefWidth="75.0" text="Quantità" />
            <TableColumn fx:id="type" prefWidth="75.0" text="Periodicità" />
            <TableColumn fx:id="date" prefWidth="75.0" text="Prossima esecuzione" />
            <TableColumn fx:id="description" prefWidth="75.0" text="Descrizione" />
         </columns>
      </TableView>
   </center>
</BorderPane>
